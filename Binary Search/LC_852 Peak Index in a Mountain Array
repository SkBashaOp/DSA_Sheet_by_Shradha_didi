class Solution {
    public int peakIndexInMountainArray(int[] arr) {
        int n = arr.length;
        int left = 0;
        int right = n-1;
        while(left<n && arr[left]<arr[left+1]){
            left++;
        }
        while(right>=0 && arr[right]<arr[right-1]){
            right--;
        }

        return left;
    }
}
