class Solution {
    public int singleNonDuplicate(int[] nums) {
        //mid and mid+1 equals then mid=mid-1
        //mid and mid+1 diff then no change in mid position
        //count left and right part and move towards odd count
        int left=0;
        int right=nums.length-1;
        while(left<right){
            int mid=left+(right-left)/2;
            if(nums[mid]==nums[mid+1]){
                mid=mid-1;
            }
            int leftpartlen=mid-left+1;
            if(leftpartlen%2==1){
                right=mid;
            }else{
                left=mid+1;
            }
        }
        return nums[left];
    }
}
